{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Clone do tabnews para o curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "trap \"npm run services:down\" INT EXIT && npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "trap \"npm run services:stop\" INT EXIT && npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --watchAll --verbose\"",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "lint-staged": {
    "*": "secretlint"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.3",
    "node-pg-migrate": "^7.9.1",
    "pg": "8.16.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@secretlint/secretlint-rule-preset-recommend": "9.3.4",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "28.12.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.2",
    "prettier": "3.5.3",
    "secretlint": "9.3.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
